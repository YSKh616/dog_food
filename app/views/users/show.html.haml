= render "layouts/header"
#wrapper
  #top
    #content
      .content-inner
        .user_profile
          .profile_header
            %table
              %tr
                %td.selfimgprofile
                  %a
                    %img{src: "https://s3-ap-northeast-1.amazonaws.com/image-upload-wango/uploads/wango_logo/image/wango_logo.png", width: "80px", height: "80px"}
                    .user_image
                %td.profile_name
                  %h1
                    %span
                      #{current_user.name}さんのマイページ
                %td.profile_edit_button
                  %h1
                    =link_to '/users/#{current_user.id}/edit', method: :get do
                      プロフィール編集
          .profile_list
            %table
              %tr
                %td.item_name
                  ユーザー名
                -if current_user.name
                  %td.user_status
                    =current_user.name
                -else
                  %td.user_status
                    登録されていません。
              %tr
                %td.item_name
                  メールアドレス
                -if current_user.email
                  %td.user_status
                    =current_user.email
                -else
                  %td.user_status
                    登録されていません。
              %tr
                %td.item_name
                  性別
                -if current_user.sex
                  %td.user_status
                    =current_user.sex
                -else
                  %td.user_status
                    登録されていません。
              %tr
                %td.item_name
                  お住まい
                -if current_user.area
                  %td.user_status
                    =current_user.area
                -else
                  %td.user_status
                    登録されていません。
              %tr
                %td.item_name
                  自己紹介
                -if current_user.introduction
                  %td.user_status
                    =current_user.introduction
                -else
                  %td.user_status
                    登録されていません。
        .user_pet_information

