.sign_in
  .company_logo_new
    %img{src: "https://s3-ap-northeast-1.amazonaws.com/image-upload-wango/uploads/wango_logo/image/wango_logo_text.png", width: "100", height: "100"}
  .sign_in_form
    %h2.user-title 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      %table.user-info
        %tr.field
          %th
            = f.label :name, "名前"
          %td
            = f.text_field :name, autofocus: true
          %br/
        %tr.field
          %th
            = f.label :image, "画像"
          %td
            = f.file_field :image
        %tr.field
          %th
            = f.label :email, "メールアドレス"
          %td
            = f.email_field :email, autofocus: true
        %tr.field
          %th
            = f.label :password, "パスワード"
          %td
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off"
        %tr.field
          %th
            = f.label :password_confirmation, "パスワード(確認)"
          %td
            = f.password_field :password_confirmation, autocomplete: "off"
        %tr.field
          %th
            = f.label :area, "お住まい"
          %td
            = f.text_field :area, autofocus: true
      .actions
        = f.submit "登録する"
      / .field
      /   = f.label :name
      /   %br/
      /   = f.text_field :name, autofocus: true
      / .field
      /   = f.label :image
      /   %br/
      /   = f.file_field :image
      / .field
      /   = f.label :email
      /   %br/
      /   = f.email_field :email, autofocus: true
      / .field
      /   = f.label :password
      /   - if @minimum_password_length
      /     %em
      /       (#{@minimum_password_length} characters minimum)
      /   %br/
      /   = f.password_field :password, autocomplete: "off"
      / .field
      /   = f.label :password_confirmation
      /   %br/
      /   = f.password_field :password_confirmation, autocomplete: "off"
      / .field
      /   = f.label :area
      /   %br/
      /   = f.text_field :area, autofocus: true
      / .actions
      /   = f.submit "登録する"
  .support_form
    = render "devise/shared/links"
